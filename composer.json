{
    "name": "satupersen/validation",
    "description": "The Illuminate Validation package.",
    "license": "MIT",
    "homepage": "https://laravel.com",
    "support": {
        "issues": "https://github.com/laravel/framework/issues",
        "source": "https://github.com/laravel/framework"
    },
    "authors": [
        {
            "name": "Taylor Otwell",
            "email": "taylor@laravel.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "egulias/email-validator": "^2.1.10",
        "satupersen/container": "^1.0",
        "satupersen/contracts": "^1.0",
        "satupersen/support": "^1.0",
        "satupersen/translation": "^1.0",
        "symfony/http-foundation": "^5.1",
        "symfony/mime": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Satupersen\\Validation\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "suggest": {
        "satupersen/database": "Required to use the database presence verifier (^1.0)."
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
